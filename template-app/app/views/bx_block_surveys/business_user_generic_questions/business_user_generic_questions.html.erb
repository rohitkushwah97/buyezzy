<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Business User Generic Questions</title>
  <link rel="stylesheet" href="/assets/shared_styles.css">
  <style>
    /* Page-specific styles */
    ul.question-list {
      list-style-type: none;
      padding: 0;
      margin: 0;
    }

    ul.question-list li {
      background-color: #f1f1f1;
      margin: 10px 0;
      padding: 15px;
      border-radius: 5px;
      font-size: 18px;
      transition: background-color 0.3s ease;
    }

    ul.question-list li:hover {
      background-color: #e2e2e2;
    }

    .no-questions-message {
      font-size: 18px;
      color: #ff6347;
      text-align: center;
    }

    .back-link {
      display: block;
      text-align: center;
      margin-top: 30px;
      font-size: 16px;
      color: #2c3e50;
      text-decoration: none;
    }

    .back-link:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>

  <div class="content-container">
    <h1>Business User Generic Questions</h1>

    <% if @questions.present? %>
      <ul class="question-list">
        <% @questions.each do |question| %>
          <li><%= question.question %></li> <!-- Display the question text -->
        <% end %>
      </ul>
    <% else %>
      <p class="no-questions-message">No Generic Questions are available for Business Users.</p>
    <% end %>
    <a href="<%= request.referrer || root_path %>" class="back-link">Go Back</a>
  </div>

</body>
</html>
